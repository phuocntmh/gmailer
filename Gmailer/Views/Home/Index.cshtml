@{
    ViewBag.Title = "Home Page";
}

<div class="row" style="margin-top:5em;">
    <div class="panel panel-primary">
        <div class="panel-heading">Demo code email bằng Gmail thông qua ASP.NET MVC 5</div>
        <div class="panel-body">
            <form class="form-horizontal" method="POST">
                <div class="form-group">
                    <label class="col-md-3" style="text-align: right;">Mời nhập email</label>
                    <div class="col-md-9">
                        <input class="form-control" name="emailid" placeholder="Nhập email cần gửi" type="email" autofocus required/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3" style="text-align:right;">Nhập nội dung</label>
                    <div class="col-md-9">
                        <textarea class="form-control" name="content" rows="5" placeholder="Nhập nội dung của email" required></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <button class="btn btn-primary" type="submit">Gửi mail</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>